@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="bg-[url('/assets/images/pexels-bianca-gasparoto-834990-1752806.jpg')] bg-cover bg-center text-white py-28 text-center">
    <div class="bg-black bg-opacity-50 px-6 py-20">
        <h1 class="text-5xl font-bold mb-4">Brew Better. Live Bolder.</h1>
        <p class="text-lg mb-8 max-w-2xl mx-auto">
            Welcome to TinyStore Coffee – your home for premium beans, expert gear, and a passion for great coffee.
        </p>
        <form method="get" action="/Product/Index" class="max-w-xl mx-auto flex flex-col sm:flex-row items-center gap-4">
            <div class="w-full relative">
                <input type="text" name="input" placeholder="e.g. Ethiopian, grinder, mug..."
                       class="search-input w-full px-4 py-2 border text-black border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-amber-500"/>
                <div class="suggestions absolute z-10 w-full bg-white border border-gray-200 rounded shadow hidden"></div>
            </div>
            <button type="submit"
                    class="bg-amber-600 text-white px-6 py-2 rounded hover:bg-amber-700 transition">
                Search
            </button>
        </form>
    </div>
</section>

<!-- Page Intro Heading -->
<div class="my-32">
    <section class="text-center pb-12 px-4">
        <h2 class="text-3xl font-semibold text-gray-800">What makes your daily coffee truly special?</h2>
        <p class="text-gray-600 mt-4 max-w-xl mx-auto">
            At TinyStore, we combine quality, craft and community — because coffee is more than a drink, it's a ritual.
        </p>
    </section>

    <!-- Features Section -->
    <section class="max-w-6xl mx-auto px-4 grid md:grid-cols-3 gap-10 text-center">
        <div>
            <img src="assets/images/pexels-masudriguez-31570363.jpg" class="mx-auto mb-4" alt="Foto von Masud Allahverdizade: https://www.pexels.com/de-de/foto/kaffeebohnenverpackung-im-industriellen-umfeld-31570363/" />
            <h3 class="text-xl font-semibold mb-2">Freshly Roasted</h3>
            <p class="text-gray-600">Our beans are roasted weekly in small batches to lock in maximum flavor and freshness.</p>
        </div>
        <div>
            <img src="assets/images/pexels-marta-dzedyshko-1042863-2067628.jpg" class="mx-auto mb-4" alt="Foto von Marta Dzedyshko: https://www.pexels.com/de-de/foto/espressomaschine-die-auf-zwei-tassen-ausgibt-2067628/" />
            <h3 class="text-xl font-semibold mb-2">Brew Like a Pro</h3>
            <p class="text-gray-600">From pour-over kits to espresso machines, we provide tools trusted by baristas worldwide.</p>
        </div>
        <div>
            <img src="assets/images/pexels-helenalopes-1015568.jpg" class="mx-auto mb-4" alt="Foto von Helena Lopes: https://www.pexels.com/de-de/foto/foto-von-mannern-die-konversationssitz-auf-stuhl-haben-1015568/" />
            <h3 class="text-xl font-semibold mb-2">Join the Culture</h3>
            <p class="text-gray-600">Be part of a passionate coffee community. Tips, recipes, and real barista insights await.</p>
        </div>
    </section>
</div>

<!-- Newsletter Section -->
<section class="bg-amber-50 my-32 py-20 px-4 text-center">
    <h2 class="text-2xl font-semibold mb-2">Join Our Coffee Club</h2>
    <p class="text-gray-600 mb-6">Get brewing guides, limited bean drops, and subscriber-only discounts straight to your inbox.</p>
    <form class="max-w-lg mx-auto flex flex-col sm:flex-row gap-4">
        <input type="email" placeholder="Enter your email"
               class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-amber-500" />
        <button type="submit" class="bg-amber-600 text-white px-6 py-2 rounded hover:bg-amber-700 transition">
            Subscribe
        </button>
    </form>
</section>