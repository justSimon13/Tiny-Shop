@{
    ViewData["Title"] = "Home";
}

<section class="hero-section h-[70vh] relative bg-[url('/assets/images/pexels-bianca-gasparoto-834990-1752806.jpg')] bg-cover bg-center text-white flex items-center justify-center">
    <div class="absolute inset-0 bg-black/50"></div>

    <div class="relative z-10 text-center max-w-2xl px-6">
        <h1 class="text-5xl sm:text-6xl font-extrabold mb-6 drop-shadow-md">
            Brew Better. <br class="hidden sm:inline" />Live Bolder.
        </h1>
        <p class="text-lg sm:text-xl mb-10 text-gray-200">
            Premium beans. Pro gear. Passion for perfection.
        </p>

        <form method="get" action="/Product/Index" class="flex flex-col sm:flex-row items-center gap-4">
            <div class="w-full sm:w-96 relative">
                <input type="text" name="input" placeholder="e.g. Ethiopian, grinder, mug..."
                       class="search-input w-full px-4 py-3 rounded-lg border border-gray-300 text-gray-900 shadow focus:outline-none focus:ring-2 focus:ring-amber-500" />
                <div class="suggestions absolute z-10 w-full bg-white border border-gray-200 rounded shadow hidden"></div>
            </div>
            <button type="submit"
                    class="bg-amber-500 text-white px-6 py-3 rounded-lg hover:bg-amber-600 transition font-medium shadow">
                Search
            </button>
        </form>
    </div>
</section>

<div class="container mx-auto">
    <section class="text-center px-4 py-20">
        <h2 class="text-3xl sm:text-4xl font-bold text-gray-800 mb-6">
            What makes your daily coffee truly special?
        </h2>
        <p class="text-gray-600 max-w-2xl mx-auto text-lg">
            At TinyStore, we blend quality, craft, and community – because coffee is more than a drink, it's a ritual.
        </p>
    </section>

    <section class="max-w-6xl mx-auto px-4 grid md:grid-cols-3 gap-10 text-center mb-32">
        <div class="bg-white p-6 rounded-xl shadow hover:shadow-lg transition">
            <img src="assets/images/pexels-masudriguez-31570363.jpg" class="w-20 h-20 mx-auto rounded-full object-cover mb-4" />
            <h3 class="text-xl font-semibold mb-2">Freshly Roasted</h3>
            <p class="text-gray-600">Roasted weekly in small batches to lock in maximum flavor and freshness.</p>
        </div>
        <div class="bg-white p-6 rounded-xl shadow hover:shadow-lg transition">
            <img src="assets/images/pexels-marta-dzedyshko-1042863-2067628.jpg" class="w-20 h-20 mx-auto rounded-full object-cover mb-4" />
            <h3 class="text-xl font-semibold mb-2">Brew Like a Pro</h3>
            <p class="text-gray-600">Pour-over kits, espresso machines and more – trusted by baristas worldwide.</p>
        </div>
        <div class="bg-white p-6 rounded-xl shadow hover:shadow-lg transition">
            <img src="assets/images/pexels-helenalopes-1015568.jpg" class="w-20 h-20 mx-auto rounded-full object-cover mb-4" />
            <h3 class="text-xl font-semibold mb-2">Join the Culture</h3>
            <p class="text-gray-600">Community-powered coffee tips, recipes, and real barista insights.</p>
        </div>
    </section>

    <section class="bg-gradient-to-br from-amber-50 to-amber-100 py-20 text-center px-4">
        <h2 class="text-3xl font-bold mb-4">Join Our Coffee Club</h2>
        <p class="text-gray-700 mb-8 max-w-lg mx-auto">
            Get brewing guides, limited bean drops, and subscriber-only discounts straight to your inbox.
        </p>

        <form class="max-w-lg mx-auto flex flex-col sm:flex-row gap-4">
            <input type="email" placeholder="Enter your email"
                   class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-amber-500" />
            <button type="submit"
                    class="bg-amber-600 text-white px-6 py-3 rounded-lg hover:bg-amber-700 transition font-medium shadow">
                Subscribe
            </button>
        </form>
    </section>
</div>
