@{
    ViewData["Title"] = "About Us";
}

<!-- Hero: Image Top Section -->
<section class="relative bg-[url('/assets/images/pexels-apgpotr-702251.jpg')] bg-cover bg-center h-[70vh] flex items-center justify-center text-white">
    <div class="absolute inset-0 bg-black/50"></div>
    <div class="relative z-10 text-center max-w-2xl px-6">
        <h1 class="text-5xl sm:text-6xl font-extrabold drop-shadow-md mb-4">Our Story</h1>
        <p class="text-lg sm:text-xl text-gray-200">
            Brewing passion since day one.
        </p>
    </div>
</section>

<!-- Content Section: Story -->
<section class="max-w-5xl mx-auto px-4 py-20">
    <div class="grid md:grid-cols-2 gap-16 items-center">
        <div class="space-y-5 text-gray-700 text-lg leading-relaxed">
            <p>
                TinyStore Coffee was founded by two lifelong baristas with one goal: to make world-class coffee accessible to everyone.
                What began as a humble coffee pop-up has grown into a digital hub for coffee lovers.
            </p>
            <p>
                We believe every great cup starts with the right ingredients – beans, tools, and passion. That’s why we rigorously test every roast and piece of gear before it makes the cut.
            </p>
            <p>
                Our mission? Empower coffee lovers everywhere to brew with confidence, connect through culture, and enjoy the ritual – one perfect cup at a time.
            </p>
        </div>

        <img src="assets/images/pexels-mali-maeder-669576.jpg" alt="Kaffeebohnen Nahaufnahme"
             class="rounded-xl shadow-lg object-cover w-full h-full max-h-[500px]" />
    </div>
</section>

<!-- Visual Break Section: Values -->
<section class="bg-gradient-to-br from-amber-50 to-amber-100 py-20 px-4">
    <div class="max-w-6xl mx-auto text-center">
        <h2 class="text-3xl font-bold mb-6 text-gray-800">What Makes Us Different?</h2>
        <div class="grid md:grid-cols-3 gap-10 text-left mt-12">
            <div class="bg-white p-6 rounded-xl shadow hover:shadow-lg transition">
                <h3 class="font-semibold text-lg mb-2 text-amber-600">Direct Partnerships</h3>
                <p class="text-gray-700">We collaborate with small-batch roasters and ethical growers to ensure sustainable, high-quality beans.</p>
            </div>
            <div class="bg-white p-6 rounded-xl shadow hover:shadow-lg transition">
                <h3 class="font-semibold text-lg mb-2 text-amber-600">Barista-Curated Gear</h3>
                <p class="text-gray-700">Our lineup is carefully hand-picked and field-tested by experienced baristas – no fluff, just the good stuff.</p>
            </div>
            <div class="bg-white p-6 rounded-xl shadow hover:shadow-lg transition">
                <h3 class="font-semibold text-lg mb-2 text-amber-600">Real Community</h3>
                <p class="text-gray-700">From live brew-alongs to virtual workshops – we're all about connection and culture, not just caffeine.</p>
            </div>
        </div>
    </div>
</section>
