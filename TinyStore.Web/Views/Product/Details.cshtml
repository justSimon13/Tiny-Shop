@model TinyStore.Domain.Product

<section class="max-w-6xl mx-auto px-4 py-20">
    <div class="grid md:grid-cols-2 gap-16 items-center">
        <div class="p-10 rounded shadow">
            @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="@Model.Name" class="w-full max-h-[500px] object-cover" />
            }
        </div>
        <div>
            <h1 class="text-4xl font-bold mb-6">@Model.Name</h1>
            <p class="text-2xl text-amber-600 font-semibold mb-4">@Model.Price.ToString("0.00") â‚¬</p>

            <div class="text-gray-700 mb-6">
                <p><strong>Category ID:</strong> @Model.CategoryId</p>
            </div>

            <button class="bg-amber-600 hover:bg-amber-700 text-white font-semibold px-6 py-3 rounded transition">
                Add to Cart
            </button>
        </div>
    </div>
</section>
