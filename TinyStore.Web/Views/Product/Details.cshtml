@model TinyStore.Domain.Product

<section class="container">
    <h1 class="text-2xl font-bold mb-20">@Model.Name</h1>

    <div class="flex flex-col sm:flex-row gap-20">
        <div class="w-full md:w-1/2">
            @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="@Model.Name" class="w-1/2 m-auto object-cover rounded"/>
            }
        </div>
        <div class="w-full md:w-1/2">
            <p class="text-lg text-gray-700 mb-2"><strong>Preis:</strong> @Model.Price.ToString("0.00") â‚¬</p>
            <p class="text-sm text-gray-500 mb-6"><strong>Kategorie-ID:</strong> @Model.CategoryId</p>
        </div>
    </div>
</section>
